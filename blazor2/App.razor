<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainHeader)">
                <NotAuthorized>
                    <p>Bạn chưa được phép truy cập.</p>
                </NotAuthorized>
                <Authorizing>
                    <p>Đang xác thực...</p>
                </Authorizing>
            </AuthorizeRouteView>

        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(ErrorLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>